<nav class="bg-dark text-light d-flex justify-content-end p-3 pr-5">
  <div class="w-25 d-flex justify-content-between">
    <a class="text-light" href='/'>Upload</a>
    <a class="text-light" href='/browse'>Images</a>
    <a class="text-light" href='/browseMemes'>Memes</a>
  </div>
</nav>
<div class="container pt-4 p-auto text-center">
  <h1>This is the images page</h1>
  {{#if images}}
  <div class="d-flex flex-wrap justify-content-center">
    {{#each images}}
    <div class="border border-success m-2 d-flex flex-column">
      <div class="bg-dark text-light text-center">
        <p class="font-weight-bold m-0 p-3">
          {{ originalname }}
        </p>
      </div>
      <div class="">
        <img src="/upload/original/{{filename}}" alt="{{filename}}" />
      </div>
      <div class="d-flex justify-content-center bg-dark p-3">
        <button class="w-50 btn-sm btn-light" data-toggle="modal" data-target="#a{{id}}">Create Meme</button>
      </div>
    </div>
    {{!-- Modal  --}}
    <div class="modal fade" id="a{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-light">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">Add text for image</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
          </div>
          <div class="modal-body mx-auto">
            <img class="img-fluid" src="/upload/original/{{originalname}}" alt="{{originalname}}">
          </div>
          <div class="modal-footer mx-auto">
            <form action="/create-meme" method="GET">
              <div class="form-group">
                <label>Text to put near the bottom</label>
                <input type="text" name="memetext" class="form-control">
                {{!-- input used to pass in extra param. Not to display anything --}}
                <input type="text" name="id" class="invisible" value="{{id}}">
              </div>
              <div class="mx-auto">
                <button type="submit" class="btn btn-warning">Submit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>